#    it under the terms of the GNU Lesser General Public License as published
#    by the Free Software Foundation, either version 3 of the License, or
#    (at your option) any later version.
#
#    This program is distributed in the hope that it will be useful,
#    but WITHOUT ANY WARRANTY; without even the implied warranty of
#    MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.  See the
#    GNU Lesser General Public License for more details.
#
#    You should have received a copy of the GNU General Public License
#    and the GNU Lesser General Public License  along with this program.  
#    If not, see <http://www.gnu.org/licenses/>.
#
testit=$(pgrep notifd)
if [ "$testit" = "" ]; then
  LD_LIBRARY_PATH=/segfs/tango/release/centos5/lib/:$LD_LIBRARY_PATH /segfs/tango/release/centos5_64/bin/notifd -n >>/dev/null 2>&1 & 
  sleep 3 
  LD_LIBRARY_PATH=/segfs/tango/release/centos5/lib/:$LD_LIBRARY_PATH /segfs/tango/release/centos5_64/bin/notifd2db
  sleep 3
fi

if [ ! -d ${HOME}/log ];
then
    mkdir ${HOME}/log
fi
now=$(date +"%Y%m%dT%H%M%S")

if [ -d /buffer/$(hostname)1 ]
then
   baseLog=/buffer/$(hostname)1
else
   baseLog=/tmp
fi 
export TestSpace=$baseLog/edna-$now
export log=${HOME}/log/tango-edna-${now}
if [ ! -d ${TestSpace} ] ;
then
	mkdir ${TestSpace}
	fi
PythonProg=${EDNA_HOME}/tango/bin/tango-EdnaDS.py
echo "Server Mode"
cd $TestSpace
HOSTNAME=$(hostname)
if [ "$HOSTNAME" = "slavia" ]
then
   ds="DAU_slavia"
fi
if [ "$HOSTNAME" = "sparta" ]
then
   ds="DAU_sparta"
fi

nohup $PYTHON $PythonProg $ds -v2 > ${HOME}/log/edna-tango-$(date +"%Y%m%dT%H%M%S").log 2>&1 &

